<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="in.hocg.mybatis.module.system.mapper.RoleStaffMapper">

    <select id="findByAllRoleUseStaffId" resultType="in.hocg.mybatis.module.system.entity.Role">
        SELECT r.*
        FROM rbac_role_staff rs
        LEFT JOIN rbac_role r ON rs.role_id = r.id
        <where>
            rs.staff_id = #{id}
        </where>
    </select>
</mapper>
